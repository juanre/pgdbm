# Production pgdbm Application Environment Variables

# Application Settings
APP_NAME="Production pgdbm App"
APP_ENV=development  # development, staging, production
APP_DEBUG=true
APP_LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/production_app
DATABASE_MIN_CONNECTIONS=10
DATABASE_MAX_CONNECTIONS=50
DATABASE_COMMAND_TIMEOUT=30.0
DATABASE_SSL_ENABLED=false

# Security
SECRET_KEY=change-me-in-production-use-a-long-random-string
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Monitoring
SLOW_QUERY_THRESHOLD_MS=1000
ENABLE_METRICS=true

# Testing (optional)
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/production_app_test